generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId     String     @id
  firstName  String
  middleName String?
  lastName   String
  email      String     @unique
  password   String
  userStatus Int        @default(1)
  carts      Cart[]
  Purchase   Purchase[]
}

model Product {
  productId   String  @id
  name        String
  category    String
  description String?
  price       Decimal @db.Decimal(9, 2)
  picture     String?
  amount      Int?    @default(0)
  carts       Cart[]
}

model Cart {
  cartId     String  @id
  amount     Int
  totalValue Decimal @db.Decimal(9, 2)

  Product   Product   @relation(fields: [productId], references: [productId])
  productId String
  User      User      @relation(fields: [userId], references: [userId])
  userId    String
  purchase  Purchase?
}

model Purchase {
  purchaseId String   @id
  date       DateTime @default(now())

  user   User   @relation(fields: [userId], references: [userId])
  userId String
  cart   Cart   @relation(fields: [cardId], references: [cartId])
  cardId String @unique
}
